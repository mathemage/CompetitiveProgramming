using namespace std;

#define FOR(I,A,B) for(int I = (A); I < (B); ++I)
#define REP(I,N)   FOR(I,0,N)
#define ALL(A)     (A).begin(), (A).end()
#define MSG(a) cout << #a << " == " << a << endl;

class CountGame {
public:
  int howMany(int maxAdd, int goal, int next) {
    int res = (goal - next + 1) % (maxAdd + 1);
    return (res == 0) ? -1 : res;
  }
};

